<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/colorPrimaryLight"
    tools:ignore="HardcodedText"
    tools:context="in.ac.iiitd.jal.UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/place_holder"
                tools:ignore="ContentDescription"/>

            <Button
                android:id="@+id/btn_upload_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:background="@color/colorAccent"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="Upload Photo"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_id_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_id_pr"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/place_holder"
                tools:ignore="ContentDescription"/>

            <Button
                android:id="@+id/btn_upload_id_proof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:background="@color/colorAccent"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="Upload ID proof"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_res_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_res_poof"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/place_holder"
                tools:ignore="ContentDescription"/>

            <Button
                android:id="@+id/btn_upload_res_proof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:background="@color/colorAccent"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="Upload Residence Proof"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:background="@color/colorAccent"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="Next"/>
    </LinearLayout>
</ScrollView>
